{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "max-len": ["error", {
            "ignoreTemplateLiterals": true,
            "ignoreStrings": true,
            "code": 100,
            "ignorePattern": "d=\"([\\s\\S]*?)\"",
            "ignoreUrls": true
        }]
    }
}
